doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Xoom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    link(rel="stylesheet", href="/public/style/main.css")
  body 
    header 
      h1 Xoom 
    hr 
    main 
      section.flex-center
        div#welcome.wrapper
          form
            label 
              span nickname
              input(type="text", name="nickname", placeholder="What's your nickname?", required, autofocus)
            label 
              span room name
              input(type="text", name="roomname", placeholder="Where do you want to go in?", required)
            button Enter Room
          h4 Open Rooms: 
          ul
        div#room.wrapper
          h3
          form#name
            label 
              span You: 
              input(type="text", placeholder="Change nickname?", required)
            button Save
          ul.message 
          form#msg
            input(type="text", placeholder="message", required)
            button Send
    footer
      a(id="colorToggle", onclick="toggleDarkMode();", href="#") 
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 