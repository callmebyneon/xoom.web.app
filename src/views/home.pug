doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Xoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", hred="../style/main.css")
    body
        header
            h1 Xoom
        main
            div#welcome
                form.flex-container
                    input(placeholder="room name", required, type="text")
                    button Enter Room
            div#call.flex-container.flex-container__stretch
                div#myStream.flex-container__column
                    video#myFace(autoplay, playsinline, width="400", height="400")
                    .buttons
                        button#mute Mute
                        button#camera Turn Camera Off
                    select#cameras
                div#peerFace
                    video(autoplay, playsinline, width="400", height="400")
                div#chat
                    ul.message
                    form.flex-container
                        input(placeholder="message", required, type="text")
                        button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js") 